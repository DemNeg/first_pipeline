pipeline {
    agent any
    def app
    tools {
        // Install the Maven version configured as "M3" and add it to the path.
        maven "M3"
    }
    stages {
        stage("Package") { 
            steps { 
                 sh "mvn package" 
             } 
        }
         stage("Docker build") { 
            steps { 
                 app=docker.build("gousindevops/calculator")
             } 
        }
        stage("Docker push") { 
            steps { 
                 docker.withRegistry('https://registry.hub.docker.com','registry')
                 {
                    app.push("${env.BUILD_NUMBER}")
                    app.push("latest")
                 } 
             } 
        }
    }
}
