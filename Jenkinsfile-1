pipeline {
    agent any
    tools {
        // Install the Maven version configured as "M3" and add it to the path.
        maven "M3"
    }
    stages {
        stage("Package") { 
            steps { 
                 sh "mvn package" 
             } 
        }
         stage("Docker build") { 
            steps { 
                 sh "docker build -t gousindevops/calculator ." 
             } 
        }
        stage("Docker push") { 
            environment{
                DHB_USERNAME=credentials('DHB_USERNAME')
                DHB_PASSWORD=credentials('DHB_PASSWORD')
            }
            steps { 
                 sh "docker login -u $DHB_USERNAME -p $DHB_PASSWORD"
                 sh "docker push gousindevops/calculator ." 
             } 
        }
    }
}
